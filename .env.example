# App URL
APP_URL=http://localhost:3210

# Database
POSTGRES_PASSWORD=lobe_password_secure

# Auth (Generate with: openssl rand -base64 32)
NEXT_AUTH_SECRET=your_random_secret_here

# Logto Configuration
LOGTO_ENDPOINT=http://localhost:3001
LOGTO_ADMIN_ENDPOINT=http://localhost:3002
AUTH_LOGTO_ID=
AUTH_LOGTO_SECRET=
AUTH_LOGTO_ISSUER=http://localhost:3001/oidc

# MinIO S3 Configuration
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=minio_password_secure
S3_ACCESS_KEY_ID=admin
S3_SECRET_ACCESS_KEY=minio_password_secure
S3_ENDPOINT=http://192.168.1.240:9000
S3_BUCKET=lobe
S3_PUBLIC_DOMAIN=http://192.168.1.240:9000
S3_SET_ACL=0
S3_PREVIEW_URL_EXPIRE_IN=1800
S3_ENABLE_PATH_STYLE=1

# Vision + SSRF-Haertung (wichtig fuer externe Provider wie OpenRouter)
LLM_VISION_IMAGE_USE_BASE64=1
SSRF_ALLOW_PRIVATE_IP_ADDRESS=0
SSRF_ALLOW_IP_ADDRESS_LIST=192.168.1.240

